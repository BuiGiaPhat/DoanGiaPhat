@model IEnumerable<QLKS.Models.TBLPHIEUDATPHONG>

@{
    ViewBag.Title = "Danh sách phiếu đặt phòng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("Index","Index")">Admin</a>
    </li>
    <li class="breadcrumb-item active">Phiếu đặt phòng</li>
</ol>
<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> Phiếu đặt phòng
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayName("Mã KH")
                        </th>
                        <th>
                            @Html.DisplayName("Tên KH")
                        </th>
                        <th>
                            @Html.DisplayName("Ngày đặt")
                        </th>
                        <th>
                            @Html.DisplayName("Ngày vào")
                        </th>
                        <th>
                            @Html.DisplayName("Ngày ra")
                        </th>
                        <th>
                            @Html.DisplayName("Số phòng")
                        </th>
                        <th>
                            @Html.DisplayName("Tình trạng")
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        if (item.MA_TINH_TRANG == 1)
                        {
                            <tr class="alert-warning">
                                <td>
                                    @Html.DisplayFor(modelItem => item.MA_KH)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TBLKHACHHANG.HO_TEN)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NGAY_DAT)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NGAY_VAO)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NGAY_RA)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.TBLPHONG.SO_PHONG)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TBLTINHTRANGPHIEUDATPHONG.TINH_TRANG)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { idpdp = item.MA_PDP }) |
                                    @Html.ActionLink("Details", "Details", new { idpdp = item.MA_PDP }) |
                                    @Html.ActionLink("Delete", "Delete", new { idpdp = item.MA_PDP })
                                </td>
                            </tr>
                        }
                        else if (item.MA_TINH_TRANG == 2 || item.MA_TINH_TRANG == 4)
                        {
                            <tr class="alert-primary">
                                <td>
                                    @Html.DisplayFor(modelItem => item.MA_KH)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TBLKHACHHANG.HO_TEN)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NGAY_DAT)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NGAY_VAO)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NGAY_RA)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.TBLPHONG.SO_PHONG)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TBLTINHTRANGPHIEUDATPHONG.TINH_TRANG)
                                </td>
                                <td>
                                    @Html.ActionLink("Details", "Details", new { idpdp = item.MA_PDP })
                                </td>
                            </tr>
                        }
                        else
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MA_KH)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TBLKHACHHANG.HO_TEN)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NGAY_DAT)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NGAY_VAO)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NGAY_RA)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.TBLPHONG.SO_PHONG)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TBLTINHTRANGPHIEUDATPHONG.TINH_TRANG)
                                </td>
                                <td>
                                    @Html.ActionLink("Details", "Details", new { idpdp = item.MA_PDP }) |
                                    @Html.ActionLink("Delete", "Delete", new { idpdp = item.MA_PDP })
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">Updated yesterday at @DateTime.Now</div>
</div>

